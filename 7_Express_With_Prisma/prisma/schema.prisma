// Object Relational Mapper
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  profile  Profile?
  roles    Role[]   @relation("UserRoles")
  orders   Order[]
}

model Profile {
  id        Int     @id @default(autoincrement())
  bio       String?
  age       Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int     @unique
}

model Order {
  id          Int      @id @default(autoincrement())
  totalAmount Float
  orderDate   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] @relation("UserRoles")
  description String?
}

model Lecture{
  id Int @id @default(autoincrement())
  name  String
  description String
  duration Int
}


